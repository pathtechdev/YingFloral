# PostgreSQL Database Configuration
POSTGRES_USER=medusa
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=medusa-db

# Backend (Medusa) Configuration
JWT_SECRET=your-jwt-secret-here-min-32-chars
COOKIE_SECRET=your-cookie-secret-here-min-32-chars
STORE_CORS=http://localhost:8000,https://your-domain.com
ADMIN_CORS=http://localhost:7001,http://localhost:9000
AUTH_CORS=http://localhost:7001,http://localhost:9000

# Frontend (Next.js) Configuration
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_BASE_URL=http://localhost:8000
NEXT_PUBLIC_DEFAULT_REGION=vn
NEXT_PUBLIC_USE_MOCK_DATA=false
REVALIDATE_SECRET=your-revalidate-secret-here

# Production URLs (uncomment for production)
# NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://api.your-domain.com
# NEXT_PUBLIC_BASE_URL=https://your-domain.com
# STORE_CORS=https://your-domain.com
